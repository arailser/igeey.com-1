<% @title = '登录'%>

<div style="width:510px;height:200px;">
  <h3><%= "下一步需要登录了，" if session[:return_to] && params[:layout] != 'false'%>请登录</h3>
  <div class="dialog_leftbar">
    <%= form_tag session_path do -%>
    <p>
      <%= label_tag 'login','用户名：' %>
      <%= text_field_tag 'login', @login,:size => 14 ,:class=> 'with_tip',:title => "注册邮箱也可以"%>
    </p>
    <p>
      <%= label_tag 'password','　密码：' %>
      <%= password_field_tag 'password', nil,:size => 14 ,:class=> 'with_tip',:title => "注意大小写"%>
    </p>
	  <p style="text-align:center">
	    <span>忘记密码了？<%= link_to '找回密码',reset_password_path,:class => "open_dialog",:title => '找回密码' %></span>
    </p>
	  <p style="text-align:center">
      <%= check_box_tag 'remember_me', '1', @remember_me %>
      <%= label_tag 'remember_me', '记住我?' %>
      <%= submit_tag '登录'%>
      <b><%= link_to '注册',signup_path,:onclick => (params[:layout] == 'false' ? "javascript:$('#signup').click();return false" : '') %></b>
    </p>
    <% end -%>
  </div>
  
  <div class="dialog_rightbar" style="text-align:center;">
    <p>
      <h5><b style="font-size:15px;color:red;">免注册！</b>用其它账号直接登录</h5>
    </p>
	  <p style="margin-top:20px">
  	  <%= link_to((image_tag "/images/icon/sina_login.gif"),:controller => 'oauth', :action => 'sina')%>
  	  <%= link_to((image_tag "/images/icon/douban_login.gif"),:controller => 'oauth', :action => 'douban')%>
  	</p>
  </div>
  
</div>

<br/>

<script type="text/javascript">
    $(document).ready(function(){
      $('.with_tip').poshytip({
				className: 'tip-yellowsimple',
				showOn: 'focus',
				alignTo: 'target',
				alignX: 'right',
				alignY: 'center',
				offsetX: 5
			});
      });
</script>
