<div style="width:510px;height:200px;">
  <div class="dialog_leftbar">
    <%= form_tag oauth_session_create_path do -%>
    <p>
      <%= label_tag 'login','用户名：' %>
      <%= text_field_tag 'login', @login,:size => 14 ,:class=> 'with_tip',:title => "注册邮箱也可以"%>
    </p>
    
    <p>
      <%= label_tag 'password','　密码：' %>
      <%= password_field_tag 'password', nil,:size => 14 ,:class=> 'with_tip',:title => "注意大小写"%>
    </p>    
    
    <p style="text-align:center">
      <span>忘记密码了？<%= link_to '找回密码',reset_password_path,:class => "open_dialog",:title => '找回密码' %></span>
    </p>
    <p style="text-align:center">
      <%= label_tag 'remember_me', '记住我?' %>
      <%= check_box_tag 'remember_me', '1', @remember_me %>
      <%= submit_tag '登录',:class => 'button'%>
    </p>
    <% end -%>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
      $('.with_tip').poshytip({
				className: 'tip-yellowsimple',
				showOn: 'focus',
				alignTo: 'target',
				alignX: 'right',
				alignY: 'center',
				offsetX: 5
			});
      });
</script>