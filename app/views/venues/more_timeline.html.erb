<% unless @timeline.empty? %>
  <% if @filter.nil? %>
  <%= render :partial => "/public/event",:collection => @timeline%>
  <% else %>
    <% @model = @filter[0..-2] %>
    <%= render :partial => "/public/#{@model}",:collection => @timeline%>
  <% end %>
  <%= link_to raw("查看更多 &#8744"),more_timeline_venue_path(@venue,:timeline => params[:timeline],:page => params[:page].to_i + 1),:class => "more_timeline" if params[:page]%>
  
  <script type="text/javascript">
    $('.more_timeline').click(function(){
        var container = $(this);
        container.html('读取中...');
        $.get(container.attr('href'),function(data){container.replaceWith(data)})
        return false;
        });
    $(".zoom_photo").click(function(){$(this).children().first().toggle();$(this).children().last().toggle();return false});
    $(".timeago").each(function(){$(this).html('(' + jQuery.timeago($(this).html()) + ')');$(this).removeClass('timeago')});
  </script>
<% end %>