<% @title = '案例'%>

<div class="box">  
  <div class="event_box">
    <div class="event" style="width:610px;">
      <% unless @kase.photo_file_name.nil? %>
        <%= link_to (image_tag @kase.photo.url,:class => "photo") + (image_tag @kase.photo.url(:max500x400),:class => "zoomed_photo"),'',:class => "zoom_photo",:style => 'float:left;margin-right:10px' %>
      <% end %>
      <pre>案例：<%= @kase.intro %></pre>
    </div>
    <div class="event_info">
      <span>发现者：<%= @kase.user.login%> | 提交于：<%= full_date(@kase.created_at)%> | 发现地：<%= @kase.address %></span>
    </div>
  </div>
</div>

<%= render :partial => '/comments/board'%>  
<%= render :partial => '/comments/form' ,:locals => {:commentable => @kase}%>