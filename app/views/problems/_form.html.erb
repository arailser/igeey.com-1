<%= form_for @problem do |form| %>
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <p>
    <%= form.label :name,'问题：'%> <%= form.text_field :name,:size => 40,:value => @problem.name%>
  </p>
  <p>
    <%= form.label :intro,'问题介绍：'%> <%= form.text_area :intro, :style => "width:320px;height:100px;"%>
  </p>
  <div style="clear:both;padding:0 20px;text-align:right">
    <%= form.submit '确定'%>
    <%= button_to_function '取消',"javascript:window.history.back()"%>
  </div>
<% end %>