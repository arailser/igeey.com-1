<% @title = "问题：#{@problem.name}"%>

<div class="box">
  <h3><%= @title %></h3>
  <pre><%= @problem.intro %></pre>
  <div id='problem_vote' style='float:right;margin:10px 20px 0 0;'>
    <% if logged_in? && (@problem.user == current_user)%>
      <%= image_tag('/images/icon/upgrey.png',:class=>'icon')%> 赞同 <%= @problem.agree_count %>
    <% else %>
      <%= link_to(raw("#{image_tag('/images/icon/upgrey.png',:class=>'icon')} 赞同 #{@problem.agree_count}"),votes_path(:voteable_id => @problem.id,:voteable_type => @problem.class.to_s,:is_agree => true,:back_path => request.fullpath), :remote => (true if logged_in?),:method => :post)%>
    <% end %>
  </div>
</div>

<div class="box">
  案例：
  <% unless @kases.empty?%>
    <span><%= link_to "更多案例(#{@problem.kases.count})", "#{problem_path(@problem)}/kases"%></span>
    <% @kases.each do |k|%>
      <% unless k.photo_file_name.nil? %>
        <div class="event_box">
          <div class="event" style="width:610px;">
            <%= link_to (image_tag k.photo.url,:class => "photo") + (image_tag k.photo.url(:max500x400),:class => "zoomed_photo"),'',:class => "zoom_photo",:style => 'float:left;margin-right:10px' %>
            <pre>案例：<%= k.intro %></pre>
          </div>
          <div class="event_info">
            <span>发现者：<%= k.user.login%> | 提交于：<%= full_date(k.created_at)%> | 发现地：<%= k.address %></span>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>
      <span style="margin-left:30px;">该问题还没有案例，您可以 <%= link_to "添加案例", "#{problem_path(@problem)}/kases/new"%></span>
    </p>
  <% end %>
</div>

留言板：
<%= render :partial => '/comments/board'%>    
<%= render :partial => '/comments/form' ,:locals => {:commentable => @problem}%>

<% content_for :sidebar do %>
  <div class="box">
    <%= form_tag new_problem_path, :method => :get do%>
      <%= text_field_tag 'keywords', @keywords,:style => 'font-size:15px;width:235px;padding:5px'%>
      <%= submit_tag '添加问题',:style=>'font-size:14px;line-height:20px;float:right;' %>
    <% end %>
  </div>
  <%= link_to "添加案例", "#{problem_path(@problem)}/kases/new"%>
<% end %>