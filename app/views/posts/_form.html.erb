<% content_for :head do %>
  <%= javascript_include_tag 'jquery.tag.editor-min.js' %>
<% end %>

<%= form_for [@problem,@post],:html => { :multipart => true } do |form| %>
  <%= form.hidden_field :problem_id ,:value => @problem.id%>
  <div id='url_link'>
    <p>
      <%= form.label :url,'链接地址：'%>
      <%= form.text_field :url,:style=>"width:300px;",:placeholder=>'如：http://www.example.com' %>
    </p>
  </div>
  <p>
    <%= form.label :title,'标题：'%>
    <%= form.text_field :title,:style=>"width:300px;margin-left:28px;",:class => 'with_calendar',:placeholder => ""%>
  </p>
  <div id='creation' style="display:none;">
    <p>
      <%= form.label :content,'内容：'%> <%= form.text_area :content, :style => "margin:-20px 0 0 74px;width:400px;height:200px;"%>
    </p>
  </div>
  <p>
    <%= form.label :tag_list,'添加标签：',:style=>"float:left"%>
    <%= form.text_field :tag_list,:class => 'tag_list' %>
  </p>
  <p>
    <div>
      <%= form.submit '确定'%>
      <%= button_to_function '取消',"javascript:window.history.back()"%>
    </div>
  </p> 
<% end %>

<% content_for :extension do %>
  <script type="text/javascript">
    $(document).ready(function(){
      $(".tag_list").each(function(index,element){jQuery(element).tag_cloud();})
    })
  </script>
<%end%>