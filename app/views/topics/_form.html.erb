<%= form_for @topic do |form| %>
  <%= raw error_explanation_for(@topic) if @topic.errors.present?%>  
  <div style="clear:both">
    <%= render :partial => '/public/user' ,:object => current_user %>
      <div class="saying">
          <div class="saying_colon_left">“</div>
          <p>
            <%= form.label :title,'标题：'%> <%= form.text_field :title,:size => 20 ,:style => "text-align:left"%>
            <br/>
            <%= form.label :content,'内容：',:style => 'float:left'%>
            <%= form.text_area :content,:style => "width:380px;height:100px;margin-left:50px"%>
          </p>
          <div class="saying_colon_right">”</div>
      </div>
      <div class="saying_tail"></div>
  </div>
  <div style="clear:both;text-align:right">
    <%= form.submit '发布',:class => "button"%>
    <%= button_to_function '取消',"javascript:window.history.back()",:class => 'button'%>
  </div>
<% end %>

