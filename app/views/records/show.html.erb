  <div class="box">
    <%= render :partial => '/public/user' ,:object => @record.user %>
      <div class="saying">
        <div class="saying_colon_left"> “</div>
        <p class="impact">
          <%="#{@record.user.login}#{@record.description}"%>
        </p>
        <div class="saying_colon_right">”</div>
      </div>
      <div class="saying_tail"></div>
      <div class="clear"></div>
      <div style="text-align:right"><span><%= link_to "修改信息？",edit_record_path(@record) if @record.can_edit_by?(current_user)%></span></div>
  </div>

  <div class="profile_box">
    <h4>受益：</h4>
    <%= render :partial => '/public/beneficary',:object => @venue%>
    <div class="clear"></div>
  </div>
    
  <% if @calling%>
  <div class="box">
    <h4>行动来自这个召集:</h4>
    <%= render :partial => "/public/calling",:object => @calling %>
  </div>
  <% end %>
  
  <%= render :partial => '/photos/gallery' ,:locals => {:imageable => @record}%>
  
  <div class="box">
    <h4>大家的留言：</h4>
    <%= render :partial => '/public/comment' ,:collection => @comments %>
  </div>
  <%= render :partial => '/comments/form' ,:locals => {:commentable => @record}%>
