  <div class="box">
    <%= render :partial => '/public/user' ,:object => @record.user ,:locals => {:with_name => true}%>
      <div class="saying">
        <div style="font-size:26px;text-align:left;font-family:'times new roman';margin-bottom:-10px;color:#999">“</div>
        <p style="padding:0 20px;">
          <%="#{@record.user.login} 在 #{@record.do_at.to_date} 为#{@venue.name}"%><%= @action.name %>:<br/>
