<% @calling = @record.calling %>
<% @venue = @record.venue %>
<% @action = @record.action %>
<% @plan = @record.plan %>
<div class="box">
  <%= form_for @record do |form| %>
    <%= raw error_explanation_for(@record) if @record.errors.present?%>
    <%= form.hidden_field :action_id %>
    <%= form.hidden_field :venue_id %>
    <%= form.hidden_field :calling_id %>
    <%= form.hidden_field :plan_id %>
    <%= render :partial => '/public/user' ,:object => current_user %>
    <div class="saying">
        <div class="saying_colon_left"> “</div>
        <p>
            <%= form.label :done_at,'我在'%><%= form.text_field :done_at, :size => 8,:class => 'with_calendar',:placeholder => "yyyy-mm-dd"%><%="为#{@venue.name}"%><%= @action.name %>:<br/>          
            <% if @action.for_what == 'money' %>
              共 <%= form.text_field :money, :size => 6 %> 元，用于<%= form.text_field :donate_for, :size => 9,:placeholder => "做什么用途?",:value => (@calling.donate_for if @calling)%>。
            <% elsif @action.for_what == 'goods' %>
              共 <%= form.text_field :goods, :size => 4 ,:placeholder => "多少"%> 件
              <%= form.text_field :goods_is, :size => 8,:placeholder => "物资名称",:value => (@calling.goods_is if @calling)%>。
            <% elsif @action.for_what == 'time' %>
               <%= form.text_field :do_what, :size => 6 ,:placeholder => "服务内容",:value => (@calling.do_what if @calling)%> 共 <%= form.text_field :time, :size => 6,:placeholder => "多少" %> 小时。
            <% end %>
            <br/>
        </p>
        <div class="saying_colon_right">”</div>
    </div>
    <div class="saying_tail"></div>
    <div style="clear:both;text-align:right">
      <p>
        <%= raw sync_form_tag(form)%>
      </p>
      <%= form.submit '确定',:class => "button"%>
      <%= button_to_function '取消',"javascript:window.location='#{@record.plan.present? ?  calling_plan_path(@record.plan.calling,@record.plan) : venue_path(@venue)}'",:class => "button"%>
    </div>
  <% end %>
</div>

<% content_for :extension do %>
<script type="text/javascript" charset="utf-8">
  $(document).ready(DateTimeShortcuts.init);
</script>
<% end %>  