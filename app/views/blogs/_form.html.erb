<% content_for :head do %>
  <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
<% end %>

<%= form_for @blog do |form| %>
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <p>
    <%= form.label :title,'标题：'%> <%= form.text_field :title,:size => 40%>
  </p>
  <p>
    <%= form.label :en_title,'英文标题：'%> <%= form.text_field :en_title,:size => 40%>
  </p>
  <p>
    <%= form.label :content,'正文：'%> <%= form.text_area :content, :name=>"editor01", :style => "width:600px;height:500px;"%>
    <script type="text/javascript">CKEDITOR.replace('editor01');</script>
  </p>
  <div style="clear:both;padding:0 20px;text-align:right">
    <%= form.submit '确定'%>
    <%= button_to_function '取消',"javascript:window.history.back()"%>
  </div>
<% end %>