<div class="box">  
  <%= render :partial => '/public/user' ,:object => @calling.user ,:locals => {:with_name => true}%>
  <div class="saying">
    <div class="saying_colon_left"> “</div>
    <p class="impact"><%= "#{@calling.user.login}#{@calling.description}" %></p>
    <p class="explanation"><%= @calling.detail %><p>
    <div class="saying_colon_right">”</div>
    <span>了解<%= link_to @calling.venue.name,@calling.venue%></span>
  </div>
  <div class="saying_tail"></div>
  <div class="clear"></div>
</div>

<div class="box">
  <% if @my_record.present? %>
    我已行动，<%= link_to '查看我的行动',@my_record %>。
  <% elsif @my_plan.present? %>
    <h4>你的计划：</h4>
    <div class="event_box">
      <%= render :partial => '/public/user',:object => @my_plan.user%>
      <div class="event">
        <p>
          <%= link_to "你计划#{@my_plan.description}。",calling_plan_path(@calling,@my_plan) %>
        </p>
        <div style="text-align:right">
          <%= link_to "已经完成?","#{new_record_path}?plan_id=#{@my_plan.id}",:class => "button" %>
          <%= link_to "取消",calling_plan_path(@calling,@my_plan),:method => :delete,:class => "button" %>
        </div>
       </div>
    </div>
  <% else %>
    <div style="clear:both;padding:0 230px">
      <%= link_to "我要响应",(logged_in? ? new_calling_plan_path(@calling) : signup_path ),:class => "big_button open_dialog",:id => 'plan_to' ,:title =>(logged_in? ? '我要响应' : '注册' )%>
    </div>
  <% end %>
</div>

<%= render :partial => '/photos/gallery' ,:locals => {:imageable => @calling}%>
  
<div class="box">
  <h4>行动记录:</h4>
  <%= render :partial => '/public/record', :collection => @records %>
  <%= render :partial => '/public/plan', :collection => @plans %>
  <div class="clear"></div>
</div>

<div class="box">
  <h4>大家的留言：</h4>
  <%= render :partial => '/public/comment' ,:collection => @comments %>
</div>
<%= render :partial => '/comments/form' ,:locals => {:commentable => @calling}%>

<% content_for :sidebar do %>
  <div class="box">
    <h4>完成度：</h4>
    <div style="text-align:center;margin:10px 0">
      <span style="font-size:54px;"><%= @calling.percentage %></span>
      <span style="font-size:24px">%<span>
    </div>
  </div>
  
  <div class="box">
    <h4>所有参与的用户：</h4>
    <%= render :partial => '/public/user',:collection => @plans.map(&:user),:locals => {:with_name => true}%>
    <div class="clear"></div>
  </div>

<% end %>