<% @title = '照片'%>
 <div style="margin:0 auto;">
 <%= link_to (image_tag @photo.photo.url(:max500x400)),@photo,:class => "open_dialog",:title => @photo.title %>
   <p>
     上传在 <%= link_to @photo.venue.name ,@photo.venue%><br/>
     <%= link_to @photo.user.login ,@photo.user%> <%=  format_date(@photo.created_at) %>
   </p>
 </div>
 <% unless params[:layout] == 'false'%>
 <div class="box">
   <h4>留言板：</h4>
   <%= render :partial => '/public/comment' ,:collection => @comments %>
 </div>
 <%= render :partial => '/comments/form' ,:locals => {:commentable => @photo}%>
 <%end%>

<% content_for :extension do %>
	<script type="text/javascript" charset="utf-8">
	 	<% @notifiable = @photo%>
  	$(document).ready(function(){
			setTimeout(function(){redirect_clear(<%= @notifiable.id %>, '<%= @notifiable.class.to_s%>')},5000);
		})
	</script>
<% end %>