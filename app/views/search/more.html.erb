<% unless @items.empty? %>
  <% @model = @items.first.class.to_s.downcase %>
  
  <%= render :partial => "/public/#{@model}",:collection => @items%>
  
  <%= link_to raw("更多结果 &#8744"),more_search_path(:keywords => params[:keywords],:items => params[:items],:page => params[:page].to_i + 1),:class => "timeline_footer",:onclick => "javascript:more_timeline($(this));return false" if params[:page]%>
  
  <script type="text/javascript">
  $(document).ready(function(){
    $('#results').html($('#results').html().replace(<%= "/(#{@keywords})/g"%>, "<strong class='keyword'>$1</strong>"));
  })
  </script>
<% end %>