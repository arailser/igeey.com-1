<%= form_for @plan,:url => calling_plans_path do |form| %>
  <%= raw error_explanation_for(@plan) if @plan.errors.present?%>  
  <% @calling = @plan.calling %>
  <% @venue = @calling.venue %>
  <% @action = @calling.action %>
  <div style="clear:both">
    <%= form.hidden_field :calling_id %>
    <%= render :partial => '/public/user' ,:object => current_user %>
    <div class="saying" style="width:360px">
        <div class="saying_colon_left">“</div>
        <p>
          <% if @action.for_what == 'money' %>
            要捐多少(元)？<%= form.text_field :money, :size => 4 ,:placeholder => '填写金额'%>。
          <% elsif @action.for_what == 'goods'%>
            要捐多少(件)？<%= form.text_field :goods, :size => 4 ,:placeholder => '填写数量'%>
          <% elsif @action.for_what == 'time'%>
            计划在哪天去？<%= form.text_field :plan_at, :size => 8,:class => 'with_calendar',:placeholder => "yyyy-mm-dd"%>。
          <% end %>
        </p>
        <div class="saying_colon_right">”</div>
    </div>
    <div class="saying_tail"></div>
  </div>
  
  <div style="clear:both;text-align:right">
    <p>
      <%= raw sync_form_tag(form) %>
    </p>
    <%= form.submit '确定',:class => "button"%>
    <%= button_to_function '取消',"javascript:$('.dialog_title span').click();window.location='#{calling_path(@plan.calling) unless params[:layout] == 'false'}'",:class => "button"%>
  </div>

  <script type="text/javascript" charset="utf-8">
    DateTimeShortcuts.init()
    
    if(!('placeholder' in document.createElement('input'))){
      $('input[placeholder!=""]').hint();
    }
    
    $('.with_explain').poshytip({
      className: 'tip-yellowsimple',
      showTimeout: 1,
      alignTo: 'target',
      alignX: 'center',
      offsetY: 5,
      allowTipHover: false
    });

  </script>
<% end %>

