  <div class="box">
    <%= render :partial => '/public/user' ,:object => @plan.user %>
      <div class="saying">
        <div style="float:right;margin-top:5px;margin-right:-15px"><span><%= link_to "修改信息？",edit_calling_plan_path(@plan.calling,@plan) if @plan.can_edit_by?(current_user)%></span></div>
        <div class="saying_colon_left"> “</div>
        <p class="impact">
          <%="#{@plan.user.login}要#{@plan.description}"%>
        </p>
        <div class="saying_colon_right">”</div>
        <span><%= "总共需要#{@plan.calling.total_number},#{@plan.calling.finished_status}。"%></span>
        <p>
          <span><%= @plan.calling.detail%><br/><%=link_to '了解更多',@plan.calling%></span></p>
      </div>
      <div class="saying_tail"></div>
      <div class="clear"></div>
  </div>
      
    <div style="clear:both;padding:0 230px">
      <% if @plan.is_done%>
        计划已完成 <%= link_to '立即查看',@plan.record %>
      <% else %>
        <% if @plan.can_edit_by?(current_user) %>
          <%= link_to "已经完成?","#{new_record_path}?plan_id=#{@plan.id}",:class => "big_button" %>
        <% elsif @my_plan %>
          你已响应： <%= link_to '查看我的计划',calling_plan_path(@calling,@my_plan)%>
        <% else %>
          <%= link_to "我也要做",(logged_in? ? "#{duplicate_calling_plan_path(@calling,@plan)}" : signup_path ),:class => "big_button open_dialog",:id => 'plan_to' ,:title =>(logged_in? ? '我要参与' : '注册' )%>
        <% end %>
      <%end%>
    </div>
  
       
  <div class="box">
    <h4>大家的留言：</h4>
    <%= render :partial => '/public/comment' ,:collection => @comments %>
  </div>
  <%= render :partial => '/comments/form' ,:locals => {:commentable => @plan}%>
