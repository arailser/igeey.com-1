  <div class="box">
    <%= render :partial => '/public/user' ,:object => @plan.user %>
      <div class="saying">
        <div style="float:right;margin-top:5px;margin-right:-15px"><span><%= link_to "修改信息？",edit_calling_plan_path(@plan.calling,@plan) if @plan.can_edit_by?(current_user)%></span></div>
        <div class="saying_colon_left"> “</div>
        <p class="impact">
          <%="#{@plan.user.login}#{@plan.description}"%>
        </p>
        <div class="saying_colon_right">”</div>
      </div>
      <div class="saying_tail"></div>
      <div class="clear"></div>
  </div>
  
  <div class="box">
    <div style="clear:both;padding:10px 230px">
        <% if @plan.can_edit_by?(current_user) %>
          <%= link_to "已经完成?","#{new_record_path}?plan_id=#{@plan.id}",:class => "big_button" %>
        <% elsif @my_plan %>
          你已参与： <%= link_to '查看我的计划',calling_plan_path(@calling,@my_plan)%>
        <% else %>
          <%= link_to "我也要#{{'time' => '去','money' => '捐','goods' => '捐'}[@calling.action.for_what]}",(logged_in? ? "#{duplicate_calling_plan_path(@calling,@plan)}" : signup_path ),:class => "big_button open_dialog",:id => 'plan_to' ,:title =>(logged_in? ? '我要参与' : '注册' )%>
        <% end %>
        <% if @plan.is_done%>
          计划已完成 <%= link_to '立即查看',@plan.record %>
        <% end %>
    </div>
  </div>
     
  <div class="profile_box">
    <h4>受益：</h4>
    <%= render :partial => '/public/beneficary',:object => @venue%>
    <div class="clear"></div>
  </div>
       
  <div class="box">
    <h4>发起人说：</h4>
      <%= render :partial => '/public/user' ,:object => @calling.user %>
      <div class="saying">
        
        <p class="explanation" >
          <span style="font-size:20px;font-family:'times new roman';color:#999">“</span>
          <%= @calling.detail %>
          <span style="font-size:20px;font-family:'times new roman';color:#999">”</span>
        </p>
      </div>
      <div class="saying_tail"></div>
      <div class="clear"></div>
  </div>
  
  <div class="box">
    <h4><%= {'goods' => '捐赠信息','time' => '集合信息','money' => '捐增信息'}[@plan.for_what]%>：</h4>
    <p style="padding:5px 10px">
      <%= @calling.info%>
    </p>
  </div>
  
  <div class="box">
    <h4>行动流程：</h4>
    <p style="padding:5px 10px">
      <%= raw @plan.action.step_by_step%>
    </p>
  </div>
      
  <div class="box">
    <h4>大家的留言：</h4>
    <%= render :partial => '/public/comment' ,:collection => @comments %>
  </div>
  <%= render :partial => '/comments/form' ,:locals => {:commentable => @calling}%>
  
  
  
<% content_for :sidebar do %>
  <div class="box">
    <h4>完成度：</h4>
    <div style="text-align:center;margin:10px 0">
      <span style="font-size:54px;"><%= @calling.percentage %></span>
      <span style="font-size:24px">%<span>
      <br/>
      <span><%= "目标#{@plan.calling.total_number},#{@plan.status}。"%></span>
    </div>
  </div>
  
  <div class="box">
    <h4>所有参与者：</h4>
    <%= render :partial => '/public/user',:collection => @calling.plans.map(&:user)%>
    <div class="clear"></div>
  </div>
  
  <%= render :partial => '/photos/gallery' ,:locals => {:imageable => @calling}%>
<% end %>