<% @title = "活动：#{@task.title}"%>
  <div class="box">  
    <%= render :partial => '/users/user' ,:object => @task.user %>
    <div class="bubble_tail"></div>
    <div class="bubble">
      <div style="float:right;text-align:right">
        完成度：<span style="font-size:28px;font-family:Ariel;font-weight:bold;color:#004d68;line-height:30px"><%="#{@task.percentage}%"%></span>
        <br/>
        <span>
          <%= {:goods=>"已捐#{@task.complete_number}件",:time => "已有#{@task.complete_number}人要去"}[@task.for_what.to_sym]%>
          <%= link_to '查看',progress_task_path(@task) unless @task.complete_number.zero?%>
        </span>
      </div>
      
      <span><%= link_to @task.user.login,@task.user %> 为 <%= link_to @task.venue.name,@task.venue %> 召集行动：</span>
      <%=  render :partial => "/tasks/shows/#{@task.for_what}"%>
      <%= raw tag_list_for(@task.tag_list)%>
      <br/>
      <%= render :partial => '/public/share'%>
    </div>
    <div style="clear:both;text-align:right">
      <% if @task.owned_by?(current_user)%>
        <span>
        <%= link_to "修改","#{edit_task_path(@task)}?back_path=#{request.path}"%> |
        <%= link_to "关闭召集","#{close_task_path(@task)}?back_path=#{request.path}",:method => :put,:confirm => '你确定要关闭这个召集行动么，一旦关闭其他人将不能参与' %>
        </span>
      <% end %>
    </div>
  </div>
  
  <div class="box">
    <% if @my_record.present? %>
      <h4>你已参与并完成行动：</h4>
      <%= render :partial => "/public/record",:object => @my_record %>
    <% elsif @my_plan.present? %>
      <h4>你的计划：</h4>
      <%= render :partial => "/public/plan",:object => @my_plan %>
    <% elsif @task.close%>
      <div style="clear:both;text-align:center">
        召集行动已经关闭  
      </div>
    <% else %>
      <div style="clear:both;text-align:center">
        <%= link_to "我要#{{'time' => '参加','money' => '捐赠','goods' => '捐赠'}[@task.for_what]}",(logged_in? ? new_task_plan_path(@task) : signup_path ),:class => "big_button open_dialog",:id => 'plan_to' ,:title =>(logged_in? ? '我要参与' : '注册' )%>
      </div>
    <% end %>
    
  </div>  

  <div class="box">
    <h4>所有参与者： <span>(绿色＝完成，红色＝未完成)</span></h4>
    <% (@records + @plans).each do |a|%>
      <div class='user' user_id="<%=a.user.id%>">
        <div class="embed_number_wrapper"><%= link_to "+#{a.number}",a,:class => (a.is_done ? "record_embed_number" : "plan_embed_number")%></div>
        <%= link_to (image_tag a.user.avatar.url,:class => "user_avatar"),a %>
        <br/>
      <span><%= link_to a.user.login,a.user%></span>
      </div>
    <% end %>
  </div>
  
  <%= render :partial => '/comments/board'%>    
  <%= render :partial => '/comments/form' ,:locals => {:commentable => @task}%> 

<% content_for :sidebar do %>
  <%= render :partial => '/venues/intro' %>
<% end %>

<% content_for :extension do %>
	<script type="text/javascript" charset="utf-8">
	 	<% @notifiable = @task%>
  	$(document).ready(function(){
			setTimeout(function(){redirect_clear(<%= @notifiable.id %>, '<%= @notifiable.class.to_s%>')},5000);
		})
	</script>
<% end %>