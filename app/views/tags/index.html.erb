<% @title = "标签"%>
  
  <div class="box" >
    <h4>热门标签 <span><%= link_to '添加标签',new_tag_path() if logged_in? && current_user.is_admin?%></span></h4>
    
    <%= render :partial => "/public/tag",:collection => @tags %>
    <div class="timeline_footer">
      <%= link_to('查看更多...',more_tags_path(:page => 2),:remote => true,:class=>'more_timeline')%>
    </div>
  </div>
  

<% content_for :sidebar do %>  
  <div class="box">
    <h4>全部标签</h4>
    <%= raw tag_list_for(Tag) %>
  </div>

<% end %>