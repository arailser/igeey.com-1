<% @title = "标签：#{@tag.name}"%>
<div class="box">
  <h2 style="background-color:#89d;color:#fff;margin:5px 0;padding:4px 16px;-moz-border-radius:5px;-webkit-border-radius:5px;display:inline;line-height:38px;}"><%= @tag.name%></h2>
  <%= link_to '编辑标签',edit_tag_path(@tag) if logged_in? && current_user.is_admin?%>
  <% unless @tag.intro.blank?%>
    <pre class="explanation"><%= @tag.intro %></pre>
  <% end %>
</div>

  
<div class="box">
  <%= form_for @question do |form|%>
    提问： <%= form.text_field :title,:style => "width:480px;",:placeholder => "关于“#{@tag.name}”,你有什么问题么？" %> <%= form.submit '添加问题'%>
    <%= form.hidden_field :tag_list,:value => @tag.name %>
  <% end %>
  <%= render :partial => '/public/question',:collection => @questions%>
</div>


<% unless @timeline.blank?%>
  <div class="box">
    <h4>带有“<%= @tag.name%>”标签的内容：</h4>
    <%= render :partial => '/public/event',:collection => @timeline%>
  </div>
<% end %>

<% content_for :sidebar do %>
  
  <% unless @tag.tag_list.blank? %>
    <div class="box">
      <h4>关联标签</h4>
      <%= raw tag_list_for(@tag) %>
    </div>
  <% end %>

<% end %>