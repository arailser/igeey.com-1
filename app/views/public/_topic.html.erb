<div class="event_type" title='topic'></div>
<div class="event_box">
  <%= render :partial => '/public/user', :object => topic.user %>
  <div class="event">
    <div class="event_panel">
      <%= link_to '查看全文' ,topic%> &raquo; 
    </div>
    <p>
      <span style="font-size:20px;font-family:'times new roman';color:#999">“</span>
          <%= "#{topic.title}"%>
      <span style="font-size:20px;font-family:'times new roman';color:#999">”</span>
    </p>
    <div class="explanation"></div>
    <div class="addition">
      <span>
        回复数 <%=topic.comments_count%>
        <%= "最后回复 #{topic.last_replied_user.login}" if topic.last_replied_user_id %>
      </span>
    </div>
  </div>
</div>