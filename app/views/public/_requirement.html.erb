<div class='requirement'>
  <%= render :partial => '/public/user', :object => requirement.publisher %>
  <div class="message">
    <%= link_to '我要行动',"#{new_plan_path}?requirement_id=#{requirement.id}",:class => 'todo' %>
    <p>
      <span style="font-size:20px;font-family:'times new roman';color:#999">“</span>
      <%="#{requirement.venue.name}"%>需要<%= requirement.action.name %>
      <% if requirement.action.for_amount %>
        总计 <%= requirement.total_amount %> 元。
      <% end %>
      
      <% if requirement.action.for_goods %>
        <%= requirement.donate_for %>
        总计 <%= requirement.total_goods %> 件。
      <% end %>
      
      <% if requirement.action.for_time %>
        总计 <%= requirement.total_people %> 小时。
      <% end %>
      <span style="font-size:20px;font-family:'times new roman';color:#999">”</span>
    </p>
    <div class="addition">
      <%= requirement.users_count.zero? ? '还没有人参与' : "有#{requirement.users_count}人参与" %>
      <%= link_to '了解更多 >>',requirement%>
    </div>
  </div>
</div>