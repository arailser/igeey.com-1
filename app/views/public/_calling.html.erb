<div class="event_type" title='calling'></div>
<div class="event_box">
  <%= render :partial => '/public/user', :object => calling.user %>
  <div class="event">
    <div class="event_panel">
      <%= link_to '了解更多' ,calling%> &raquo; 
    </div>
    <p>
      <span style="font-size:20px;font-family:'times new roman';color:#999">“</span>
          <%= "#{calling.user.login}#{calling.description}"%>
      <span style="font-size:20px;font-family:'times new roman';color:#999">”</span>
    </p>
    <div class="addition">
      <span>
        <%= calling.users_count.zero? ? '还没有人参与' : "有#{calling.users_count}人参与，" %><%= "#{calling.finished_status}。"%>
        <%= '(你已参与)' if logged_in? && calling.plans.map(&:user_id).include?(current_user.id) %>
        <%= image_tag '/images/icon/photo.gif',:class => "icon",:alt => '有照片哦' if calling.has_photo%>
      </span>
    </div>
  </div>
</div>