<div class="event_box">
  <%= render :partial => "/venues/venue",:object => plan.venue %>
  <div class="event">
    <% if plan.is_done  %>
      <div class="event_panel">
        已行动
      </div>
    <% elsif (plan.user == current_user) %>
      <div class="event_panel">
        <%= link_to '完成?',"#{new_record_path}?plan_id=#{plan.id}"%>
        <%= link_to "修改","#{edit_calling_plan_path(plan.calling,plan)}?back_path=#{request.path}"%>
        <%= link_to "取消",calling_plan_path(plan.calling,plan),:method => :delete,:confirm => '确定要取消你的计划么?' %>
      </div>
    <% end %>
    <span><%= link_to plan.user.login,plan.user %> 要为 <%= link_to plan.venue.name,plan.venue %> 捐赠：</span>
    <pre><%= link_to "#{plan.description}",calling_plan_path(plan.calling_id,plan),:class => "event_link"%></pre>
    <div class="addition">
      <span>
        <%= "#{plan.status}"%>
        <%= image_tag '/images/icon/photo.gif',:class => "icon",:alt => '有照片哦' if plan.calling.has_photo%>
      </span>
    </div>
    <div class="event_action">
      <span class="timeago" style="float:left"><%= plan.created_at %></span>
      <%= link_to "删除","#{plan_path(plan)}?back_path=#{request.path}",:method => :delete,:confirm => '你确定要删除这条报到么？' if current_user && current_user.id == plan.user_id%>
      　<%= link_to "回复#{'(' + plan.comments.size.to_s + ')' if plan.comments.first}",'',:class => "event_reply"%>　
    </div>
    <%= render :partial => "/public/reply_form",:locals =>  {:object => plan}%>
  </div>
</div>