<% venue = venue || saying.venue %>
<% user = user || saying.user %>

<div class="event_box">
  <%= controller_name == 'venues' ? (render :partial => "/users/avatar",:object => user) : (render :partial => "/venues/venue",:object => venue) %>
  <div class="event">  
    <span>
      <%= image_tag('/images/icon/saying.gif',:class => 'icon')%>
      <%= link_to user.login,user if controller_name == 'venues'%>
      <%= raw("在 #{link_to venue.name,saying.venue}") if controller_name == 'users'%>
      <%= raw(['users','venues'].include?(controller_name) ? '报到：' : "#{link_to venue.name,venue} 有了新报到：") %>
    </span>
    <pre><%= saying.content %></pre>
    
    <div class="event_info">
      <span><%= raw "by #{link_to user.login,user}" unless ['users','venues'].include?(controller_name) %></span>
      <span class="timeago"><%= saying.created_at %></span>
    </div>
    <div class="event_action">
      <% if saying.owned_by?(current_user) %>
        <%= link_to "删除","#{saying_path(saying)}?back_path=#{request.path}",:method => :delete,:confirm => '你确定要删除这条报到么？'%> |
      <% end %>
      <%= link_to "回复#{'(' + saying.comments_count.to_s + ')' if saying.comments_count > 0}",'',:class => "event_reply",:onclick=>"javascript:redirect_clear(#{saying.id},'Saying')"%>　
    </div>
    <%= render :partial => "/public/reply_form",:locals =>  {:object => saying}%>
  </div>
</div>
