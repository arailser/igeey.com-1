<% user = saying.user %>

<div class="event_box">
  <div class="event" style="width:610px;">  
    <div class='user'>
        <%= link_to (image_tag saying.user.avatar.url,:class => "user_avatar",:alt => saying.user.login),saying.user %>
    </div>
    <div class="tips_right">
      <%= link_to saying.user.login, saying.user, :class=>"tips_user"%>
      <div class="tips_content"><%= saying.content %></div>
      <span><%= date_interval(saying.created_at)%></span>
      <%= link_to "回复#{'(' + saying.comments_count.to_s + ')' if saying.comments_count > 0}",'',:class => "event_reply",:style=>"font-size:12px;float:right;",:onclick=>("javascript:redirect_clear(#{saying.id},'Saying')" if logged_in?)%>　
    </div>
    <%= render :partial => "/public/reply_form",:locals =>  {:object => saying}%>
  </div>
</div>
