<div class="event_type" title='record'></div>
<div class="event_box">
  <%= render :partial => '/users/user', :object => record.user %>
  <div class="event">
    <% if record.user == current_user %>
      <div class="event_panel">
        <%= link_to '修改',"#{edit_record_path(record)}?back_path=#{request.path}"%>
        　<%= link_to "删除","#{record_path(record)}?back_path=#{request.path}",:method => :delete,:confirm => '你确定要删除这个行动记录么' %>
      </div>
    <% end %>
    <p>
      <span style="font-size:20px;font-family:'times new roman';color:#999">“</span>
      <%= link_to "#{record.user.login}#{record.description}",record,:class=>'event_link'%>
      <span style="font-size:20px;font-family:'times new roman';color:#999">”</span>
    </p>
    <div class="addition">
    </div>
  </div>
</div>