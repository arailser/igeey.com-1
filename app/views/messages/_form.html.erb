<%= form_for @message do |form| %>  
  <div style="clear:both">
    <h3>发信给：<%= @user.login%></h3>
    <%= form.hidden_field :to_user_id%>
    <%= form.hidden_field :from_user_id%>
    <%= form.text_area :content,:style => "#{ params[:layout]=='false' ? 'width:440px' : 'width:520px'};height:100px;margin:15px 0px 15px 40px"%>
  </div>
  <div style="clear:both;text-align:right">
    <%= form.submit '发送',:class => "button"%>
    <%= button_to_function '返回',"javascript:$('#floatBox #close_dialog').click();#{'window.history.back()' unless params[:layout] == 'false'}",:class => "button"%>
  </div>
<% end %>