<div style="width:510px;">
  <h2>欢迎来到爱聚，简单注册即可加入。</h2>
  <% @user.password = @user.password_confirmation = nil %>
  
  <%= error_messages_for :user %>
  <div class="dialog_leftbar">
    <%= form_for :user, :url => users_path do |f| -%>
    <p>
      <%= label_tag 'login','用户名:' %>
      <%= f.text_field :login,:size => 14 %>
    </p>
    
    <p>
      <%= label_tag 'email','邮箱:　' %>
      <%= f.text_field :email, :size => 14 %>
      </p>
    
    <p>
      <%= label_tag 'password','密码:　' %>
      <%= f.password_field :password,:size => 14,:class=> 'with_tip',:title => "密码不要少于6位" %>
    </p>
    <p>
      <div id="confirmation"></div>
    </p>
    
    <p>
      <%= submit_tag 'Ok',:class => 'button' %>
    </p>
    
    <script type="text/javascript">
      $('#confirmation').html('<%= raw "#{label_tag 'password_confirmation','第二遍:'} #{f.password_field :password_confirmation, :size => 14,:class=> 'with_tip',:title =>'再输入一遍密码'}" %>')
    </script>
    <% end -%>
  </div>
  <div class="dialog_rightbar">
    <p>
      已经加入爱聚了？<br/>
      <%= link_to '去直接登录',login_path,:onclick => (params[:layout] == 'false' ? "javascript:$('#login').click();return false" : '') %>
    </p>
  </div>
  
  <div class="clear"></div>
</div>
  
<script type="text/javascript">
    $(document).ready(function(){
      $('.with_tip').poshytip({
				className: 'tip-yellowsimple',
				showOn: 'focus',
				alignTo: 'target',
				alignX: 'right',
				alignY: 'center',
				offsetX: 5
			});
      });
</script>  