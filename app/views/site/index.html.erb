<% unless logged_in? %>
<div style="background-color:#e66;width:100%;height:50px;padding:80px 0;text-align:center;font-size:30px;color:white;">
  参与、记录和分享我的公益行动。
</div>
<br/>
<% end %>

<h4>最新需求:</h4>
<%= render :partial => 'public/requirement', :collection => @requirements %>

<% content_for :sidebar do %>
  <div style="clear:both;padding:4px 20px;height:220px">
    <%= link_to "记录我的行动",new_record_path,:id => "create_venue",:class => 'big_button' %>
    <%= link_to "添加新的聚点",new_venue_path,:id => "create_venue",:class => 'big_button' %>
  </div>
  
  <h4><%= "你有新消息" if logged_in? && current_user.has_unread_comment? %></h4>
  
  
  
  <h4>最新的聚点:</h4>
  <p>
  <% @venues.each do |venue| %>
    <%= link_to(venue.name,venue)%>
  <% end %>
  </p>
<% end %>