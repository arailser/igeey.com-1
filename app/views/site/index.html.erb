<% unless logged_in? %>
<div style="background-color:#ddd;width:100%;height:50px;padding:80px 0;text-align:center;font-size:30px;color:white;">
  参与、记录和分享我的公益行动。
</div>
<br/>
<% end %>

<div id="tabContaier">
  <ul>
    <li><%= link_to '正在发生','#public_timeline'%></li>
    <li><%= link_to '刚刚完成','#record_timeline'%></li>
    <li><%= link_to '我的关注','#my_timeline',:id => 'my_timeline_tab' if logged_in?%></li>
    <li><%= link_to '我的城市','#city_timeline',:id => 'city_timeline_tab' if logged_in?%></li>
  </ul>
  
  <div id="public_timeline" class="tabContents">
    <%= render :partial => '/public/event', :collection => @public_timeline %>
  </div>
  
  <div id="record_timeline" class="tabContents">
    <%= render :partial => '/public/event', :collection => @record_timeline %>
  </div>
  
  <div id="my_timeline" class="tabContents">
    <p>读取中...</p>
  </div>
  
  <div id="city_timeline" class="tabContents">
    <p>读取中...</p>
  </div>
</div>

<% content_for :sidebar do %>  
  
    
  <% if logged_in?%>
    <div class="sidebar_panel">
      <div style="padding:5px 5px;float:right;width:150px">
        <h4><%= link_to current_user.login,current_user%></h4>
        关注：<%= link_to "#{current_user.following_venues.size}个聚点",following_venues_user_path(current_user) %>　<%= link_to "#{current_user.following_users.size}个用户",following_users_user_path(current_user) %>
      </div>
      <div style="padding:10px 5px;">
        <%= image_tag current_user.avatar.url(:_48x48),:class => "avatar" %>
      </div>
    </div>
    
    <% if current_user.has_unread_comment? %>
      <div class="sidebar_panel">
        <%= link_to "有人在你的消息下留言了，去看看?",unread_comments_path%>
      </div>
    <% end %>
    
    <% unless @my_plans.blank? %>
      <div class="sidebar_panel">
        <h4>你的计划完成了么？</h4>
        <ul>
        <% @my_plans.each do |plan|%>
          <li><%= link_to "#{plan.description}",calling_plan_path(plan.calling,plan)%></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
  <% else %>
  <div class="box" style="text-align:center">
    <%= link_to raw("现在加入<br/>一起改变世界"),signup_path,:class=>"open_dialog",:id => "signup_button",:title=>'注册'%>
    <span>已经是用户？<%= link_to '直接登录' ,login_path, :class=>"open_dialog", :title => '登录'%></span>
  </div>
  
  <% end %>

<% end %>

<% content_for :extension do %>
  <script type="text/javascript">
    $('#my_timeline_tab').click(function(){
      $.get('<%= my_timeline_path%>',function(data){
        $('#my_timeline').html(data)
      })
    })
    $('#city_timeline_tab').click(function(){
      $.get('<%= city_timeline_path%>',function(data){
        $('#city_timeline').html(data)
      })
    })
  </script>
<% end %>